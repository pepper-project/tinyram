+# canonicalize the path for our recursive readlinking
+readlink_fn_simple () {
+    cPath=$(cd -P -- "$(dirname -- "$1")" &>/dev/null && echo $(pwd -P)/$(basename -- "$1"))
+    echo "$cPath"
+}
