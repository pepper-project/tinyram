+
+            if $(echo $lDest | grep -qE '^/'); then
+                tcPath=$lDest;
+            else
+                tcPath=$(dirname -- "$cPath")/$lDest;
+            fi
+            cPath=$(readlink_fn_simple "$tcPath")
+        done
+
